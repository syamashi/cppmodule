NAME = convert
SRCS = $(shell echo *.cpp)
OBJDIR = ./obj/
OBJS = $(SRCS:%.cpp=$(OBJDIR)%.o)

CC = clang++
CFLAGS = -Wall -Werror -Wextra

all: $(OBJDIR) $(NAME)

$(OBJDIR):
	mkdir -p obj

$(OBJDIR)%.o: %.cpp
	$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

test: re
	./$(NAME) 0
	./$(NAME) nan
	./$(NAME) 42.0f
	@echo
	@echo "------ limit test ------"
	./$(NAME) +inf
	@echo
	./$(NAME) +inff
	@echo
	./$(NAME) -inf
	@echo
	./$(NAME) -inff
	@echo
	./$(NAME) nan
	@echo
	./$(NAME) nanf
	@echo
	@echo "------ char test ------"
	./$(NAME) a
	@echo
	./$(NAME) '*'
	@echo
	./$(NAME) 100
	@echo
	./$(NAME) 127
	@echo
	./$(NAME) 128
	@echo
	./$(NAME) 31
	@echo
	./$(NAME) -1
	@echo
	@echo "------ int test ------"
	./$(NAME) 2147483647
	@echo
	./$(NAME) 2147483648
	@echo
	./$(NAME) -2147483648
	@echo
	./$(NAME) -2147483649
	@echo
	@echo "------ float test ------"
	./$(NAME) 123456789023456789012345678901234567890.012f
	@echo
	./$(NAME) 1234567890234567890123456789012345678901.012f
	@echo
	./$(NAME) -123456789023456789012345678901234567890.012f
	@echo
	./$(NAME) -1234567890234567890123456789012345678901.012f
	@echo
	@echo "------ double test ------"
	./$(NAME) .012
	@echo
	./$(NAME) .012
	@echo
	./$(NAME) -.012
	@echo
	./$(NAME) -.012
	@echo
	@echo "------ invalid args test ------"
	./$(NAME) --123
	./$(NAME) ++123
	./$(NAME) -+123
	./$(NAME) -1.2.3
	./$(NAME) 123f
	./$(NAME) 123.
	./$(NAME) 123d
	./$(NAME) as
	./$(NAME) 123a456

.PHONY: all fclean clean re test